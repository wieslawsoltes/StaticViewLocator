<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:StaticViewLocatorDemo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="140"
             x:Class="StaticViewLocatorDemo.Views.MetricView"
             x:DataType="vm:MetricViewModel">
  <Border Padding="12"
          Background="{DynamicResource ThemeAccentBrush2}"
          CornerRadius="8">
    <StackPanel Spacing="4">
      <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold"/>
      <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Opacity="0.8"/>
      <StackPanel Orientation="Horizontal" Spacing="6">
        <TextBlock Text="{Binding Value, StringFormat={}{0:F1}}" FontSize="20" FontWeight="Bold"/>
        <TextBlock Text="{Binding Unit}" VerticalAlignment="Center"/>
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>
