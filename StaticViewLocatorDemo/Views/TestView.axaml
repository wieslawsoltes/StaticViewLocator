<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:StaticViewLocatorDemo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StaticViewLocatorDemo.Views.TestView"
             x:DataType="vm:TestViewModel">
  <Border Padding="24" Background="{DynamicResource ThemeControlMidBrush}" CornerRadius="12">
    <StackPanel Spacing="8">
      <TextBlock Text="{Binding Greeting}" FontSize="20" FontWeight="SemiBold"/>
      <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
    </StackPanel>
  </Border>
</UserControl>
