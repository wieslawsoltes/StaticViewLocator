<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:StaticViewLocatorDemo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StaticViewLocatorDemo.Views.ReportsView"
             x:DataType="vm:ReportsViewModel">
  <ScrollViewer>
    <StackPanel Margin="16" Spacing="12">
      <ItemsControl ItemsSource="{Binding Reports}">
        <ItemsControl.ItemTemplate>
          <DataTemplate x:DataType="vm:ReportViewModel">
            <ContentControl Content="{Binding .}" Margin="0,0,0,12"/>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </StackPanel>
  </ScrollViewer>
</UserControl>
